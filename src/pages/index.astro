---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../components/FormattedDate.astro';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body class="bg-slate-50">
		<Header />
		<main class="max-w-4xl mx-auto px-4 py-8 md:py-12">
			<section class="text-center mb-12 md:mb-16">
				<h1 class="text-3xl md:text-5xl font-extrabold mb-4 gradient-text leading-tight">
					欢迎来到 Gnay 的博客
				</h1>
				<p class="text-lg md:text-xl text-slate-600 max-w-2xl mx-auto px-2">
					分享关于 AI、Linux、旅行以及生活中的点滴思考。
				</p>
			</section>

			<section>
				<h2 class="text-2xl font-bold mb-8 text-slate-800 border-b pb-2">
					最新文章
				</h2>
				<div class="grid gap-8">
					{
						posts.map((post) => (
							<a href={`/blog/${post.id}/`} class="group">
								<article class="glass-card p-6 transition-all duration-300 hover:shadow-xl hover:-translate-y-1">
									<div class="flex flex-col md:flex-row md:items-center justify-between gap-4">
										<div>
											<h3 class="text-2xl font-bold text-slate-900 group-hover:text-blue-600 transition-colors mb-2">
												{post.data.title}
											</h3>
											<p class="text-slate-600 line-clamp-2 mb-4">
												{post.data.description}
											</p>
											<div class="text-sm text-slate-500 flex items-center gap-2">
												<FormattedDate date={post.data.pubDate} />
											</div>
										</div>
										<div class="hidden md:block">
											<span class="inline-flex items-center px-4 py-2 rounded-full bg-blue-50 text-blue-600 text-sm font-medium group-hover:bg-blue-600 group-hover:text-white transition-colors">
												阅读全文
												<svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
													<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="9 5l7 7-7 7" />
												</svg>
											</span>
										</div>
									</div>
								</article>
							</a>
						))
					}
				</div>
			</section>
		</main>
		<Footer />
	</body>
</html>
